<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5.0sp"
    android:paddingBottom="5.0sp">

    <ImageView
        android:id="@+id/item_list_img"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_weight="1.0"
        android:contentDescription="@string/home_text"
        app:srcCompat="@drawable/phare_jument" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1.0"
        android:textSize="14sp"
        android:textAppearance="?textAppearanceListItem" />

    <TextView
        android:id="@+id/item_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1.0"
        android:textSize="12sp"
        android:textAppearance="?textAppearanceListItem" />

    <TextView
        android:id="@+id/item_construction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_weight="1.0"
        android:textSize="12sp"
        android:textAppearance="?textAppearanceListItem" />
</LinearLayout>